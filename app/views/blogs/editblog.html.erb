<% provide(:title, 'Edit Blog') %>
<h1>Edit Blog</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body%>
      <br>

      

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
