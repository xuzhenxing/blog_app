<% provide(:title, 'New Blog') %>
<h1>New Blog</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for(@blog) do |f| %>
  		<%= render 'shared/error_messages', object: f.object %>
  		<%= f.label :标题 %>
    	<%= f.text_field :title %>

    	<%= f.label :文章 %>
    	<%= f.text_area :body%>
      <br>

    	

    	<%= f.submit "Create my Blog", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
