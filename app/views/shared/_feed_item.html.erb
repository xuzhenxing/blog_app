<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="title"><%= feed_item.title %></span><br>
  <span class="created">posted at:<%= feed_item.created_at %></span><br>
  <span class="approved_comments_count">comments:<%= feed_item.approved_comments_count %></span></r><br>
  <% if current_user?(feed_item.user) %>
    
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" },title: feed_item.title %>
  <% end %>
</li>